<div class="section-colored text-center">

  <div id="top" class="header">
    <!-- NOTE: stuff put here will also have the background image behind it. -->
  </div>

  <hr>
  <h1>Hello Code Fellows!</h1>
  <h3><%= link_to "Posts", posts_path %></h3>
  <h3><%= link_to "Projects", projects_path %></h3>
  <div class="container">
    <div class="row">
      <div class"col-lg-12">
        <div id="user_header">
          <div class="nav">
            <% if current_user %>
              Logged in as <%= current_user.email %> <br>
              <%= link_to "Sign Out", signout_path %>
            <% end %>

            <% if !current_user %>
              <%= link_to "Sign In", new_user_session_path %> or
              <%= link_to "Sign Up", new_user_registration_path %>
            <% end %>
          </div>
        </div>
      </div><!-- /.col -->
    </div><!-- /.row  -->
  </div><!-- /.container -->
